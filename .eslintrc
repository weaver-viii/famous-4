{
    "env": {
        "browser": true,
        "amd": true
    },
    "globals": {
        "DocumentFragment": true
    },
    "rules": {
        "valid-jsdoc": 1,
        "curly": [1, "multi"],
        "brace-style": [1, "stroustrup"],
        "consistent-this": 2,
        "no-constant-condition": 1,
        "no-underscore-dangle": 0,
        "no-use-before-define": 1,
        "func-names": 0,
        "func-style": [2, "declaration"],
        "new-cap": 1,
        "new-parens": 2,
        "no-ternary": 0,
        "no-unused-vars": [1, {"vars": "local", "args": "none"}],
        "quotes": [2, "single"],
        "one-var": 1,
        "space-infix-ops": 0,
        "strict": 1,
        "no-wrap-func": 1,
        "no-console": 0,
        "no-undef": 1
    }
}
